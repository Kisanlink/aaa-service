# AAA Service Environment Configuration

# Server
HTTP_PORT=8080
GRPC_PORT=50051
GIN_MODE=debug
LOG_LEVEL=debug

# Application Environment (development, staging, production)
# Controls cookie security settings (SameSite, Secure flags)
APP_ENV=development

# Database
DB_PRIMARY_BACKEND=gorm
DB_POSTGRES_HOST=localhost
DB_POSTGRES_PORT=5432
DB_POSTGRES_USER=postgres
DB_POSTGRES_PASSWORD=your_password_here
DB_POSTGRES_DBNAME=aaa_service
DB_POSTGRES_SSLMODE=disable
DB_POSTGRES_MAX_CONNS=10
DB_POSTGRES_IDLE_CONNS=5

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS_ENABLED=false

# JWT
AAA_JWT_SECRET=your-jwt-secret-min-32-chars-here!!
AAA_JWT_ISSUER=aaa-service
AAA_JWT_TTL=24h

# Cookie Domain (for cross-subdomain auth)
# Leave empty for localhost, set to .beta.kisanlink.in for beta
AAA_COOKIE_DOMAIN=

# CORS
# Comma-separated origins, or * for all
AAA_CORS_ALLOWED_ORIGINS=http://localhost:5173
AAA_CORS_ALLOW_CREDENTIALS=true

# Aadhaar Verification (Sandbox API)
AADHAAR_SANDBOX_URL=https://api.sandbox.co.in
AADHAAR_SANDBOX_API_KEY=your-api-key-here
AADHAAR_SANDBOX_API_SECRET=your-api-secret-here

# OTP Configuration
OTP_EXPIRATION_SECONDS=300
OTP_MAX_ATTEMPTS=3
OTP_COOLDOWN_SECONDS=60

# Photo Upload
PHOTO_MAX_SIZE_MB=5

# AWS S3 Configuration (for photo/document storage)
AWS_S3_BUCKET=your-bucket-name
AWS_REGION=ap-south-1
# Only needed for local dev (ECS uses task role)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# SMS Configuration (via AWS SNS)
SMS_ENABLED=false
SMS_SENDER_ID=KSNLNK
SMS_MESSAGE_TYPE=Transactional
SMS_OTP_EXPIRY_MINUTES=5
SMS_MAX_PER_HOUR=10
SMS_MAX_PER_DAY=50

# Seed Admin Credentials (required for first-run database seeding)
SEED_SUPERADMIN_PHONE=9999999999
SEED_SUPERADMIN_PASSWORD=SuperAdmin@123
SEED_ADMIN_PHONE=8888888888
SEED_ADMIN_PASSWORD=Admin@123

# Auto Migration
AAA_AUTO_MIGRATE=true

# API Documentation
AAA_ENABLE_DOCS=true
