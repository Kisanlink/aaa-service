######## Server ########
HTTP_PORT=8080
GRPC_PORT=50051
LOG_LEVEL=info
JWT_SECRET=change-me-in-prod

######## Primary Database (used by aaa-service itself) ########
DB_PRIMARY_BACKEND=gorm
DB_POSTGRES_HOST=localhost
DB_POSTGRES_PORT=5432
DB_POSTGRES_USER=aaa_user
DB_POSTGRES_PASSWORD=aaa_password
DB_POSTGRES_DBNAME=aaa_service
DB_POSTGRES_SSLMODE=disable
DB_POSTGRES_MAX_CONNS=10
DB_POSTGRES_IDLE_CONNS=5

######## Redis ########
REDIS_HOST=localhost
REDIS_PORT=6379

######## SpiceDB (authzed) ########
# Service uses these to reach SpiceDB
DB_SPICEDB_ENDPOINT=localhost:50051
DB_SPICEDB_TOKEN=your-secret-key-here

# Local Postgres that backs SpiceDB (only used by docker-compose "postgres17")
SPICEDB_DB_NAME=spicedb
SPICEDB_PG_USER=spicedb
SPICEDB_PG_PASSWORD=spicedb
